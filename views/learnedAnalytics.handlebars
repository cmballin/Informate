		<script type="text/javascript">
			var currentPerson;
			var ticksQuant = [
		   		[1, "Week 1"], [2, "Week 2"], [3, "Week 3"], [4, "Week 4"]
			];
			
			var ticksWhat = [
		   		[1, "Tech"], [2, "Home"], [3, "Nature"], [4, "Misc"]
			];
		
			
		
			var options = {
				
				axesLabels: {
            		show: true
		        },
		        
		        lines: {
					show: true
				},
				
				points: {
					show: true
				},
		        
		        xaxes: [{
		            axisLabel: 'Weeks',
			        axisLabelFontSizePixels: 12,
			        axisLabelFontFamily: 'Verdana, Arial, Helvetica, Tahoma, sans-serif',
			        axisLabelPadding: 5,
			        ticks: ticksQuant,
			        tickLength: 0
		        }],
		        
		        yaxes: [{
		            position: 'left',
		            axisLabel: 'New   ideas   learned',
		            axisLabelFontSizePixels: 12,
			        axisLabelFontFamily: 'Verdana, Arial, Helvetica, Tahoma, sans-serif',
			        axisLabelPadding: 5
		        }],
		        
		        grid: {
			        borderWidth: 0
			    }
				
			};
			
		
			$(function () {
    
			    $('#quant-learn').click(function(){
			    	
			    	$('#suggest-list').hide();
			    	
			    	options = {
						axesLabels: {
		            		show: true
				        },
				        
				        lines: {
							show: true
						},
						
						points: {
							show: true
						},
				        
				        xaxes: [{
				            axisLabel: 'Weeks',
					        axisLabelFontSizePixels: 12,
					        axisLabelFontFamily: 'Verdana, Arial, Helvetica, Tahoma, sans-serif',
					        axisLabelPadding: 5,
					        ticks: ticksQuant,
					        tickLength: 0
				        }],
				        
				        yaxes: [{
				            position: 'left',
				            axisLabel: 'New   ideas   learned',
				            axisLabelFontSizePixels: 12,
					        axisLabelFontFamily: 'Verdana, Arial, Helvetica, Tahoma, sans-serif',
					        axisLabelPadding: 5
				        }],
				        
				        grid: {
					        borderWidth: 0
					    }
						
					};
					
			    	plotDataSet(0);
			    	
				  
				    $('#placeholder').show();
				   
			    	$('#graph-title').text("Unique ideas learned");
			    });
			    
			     $('#what-learn').click(function(){
			     	
			     	$('#suggest-list').hide();
			     	
			     	options = {
				
						axesLabels: {
		            		show: true
				        },
				        
				        bars: {
							show: true,
							align: "center",
    						barWidth: 0.75
						},
						
				        
				        xaxes: [{
				            axisLabel: 'Categories',
					        axisLabelFontSizePixels: 12,
					        axisLabelFontFamily: 'Verdana, Arial, Helvetica, Tahoma, sans-serif',
					        axisLabelPadding: 5,
					        ticks: ticksWhat,
					        tickLength: 0
				        }],
				        
				        yaxes: [{
				            position: 'left',
				            axisLabel: 'number of ideas learned',
				            axisLabelFontSizePixels: 12,
					        axisLabelFontFamily: 'Verdana, Arial, Helvetica, Tahoma, sans-serif',
					        axisLabelPadding: 5
				        }],
				        
				        grid: {
					        borderWidth: 0
					    }
						
					};
				    
				    plotDataSet(1);
				    
				  
				    $('#placeholder').show();
				   
			    	$('#graph-title').text("Categories you learned");
			    });
			    
			    $('#suggest-learn').click(function(){
				    $('#placeholder').hide();
				    
				    $('#suggest-list').show();
				   
			    	$('#graph-title').text("Suggestions");
			    });
			
			});
			

			function getData(result) {
				currentPerson = result;
				plotDataSet(0);
			
			}	
			function plotDataSet(index){
				$.plot($("#placeholder"), [currentPerson.datasets[index]], options);
			}
			
			
			$(document).ready(function() {
				//this is the person call this will have to change
				$.get("/getflotdata?index=0",getData);
				$('#suggest-list').hide();
		//      $.plot($("#graph-quant"), [data_quant], options);
		//	    $.plot($("#graph-what"), [data_what], options);
		//	    $('#suggest-list').hide();
		//	    $('#graph-what').hide();
			});
		
		</script>
